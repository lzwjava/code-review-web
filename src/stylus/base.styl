@import "variables.styl"
@import "reset.styl"

*{
  box-sizing: border-box;
}

html, body, a
  font-family "Helvetica Neue",Helvetica,"PingFang SC","Microsoft Yahei","WenQuanYi Micro Hei",Arial,Verdana,sans-serif
  font-size 14px
  color textColor
  
body
  min-width 1440px

.hidden
  display none

ul.list
  font-size 0
  li
    display inline-block
    font-size 1rem

a:hover
  opacity 0.8

.btn-common
  margin 5px
  border-radius 1px
  padding 10px

.btn-detail
  background rgba(255,255,255,0.10)
  border 1px solid #ffffff

.btn-blue
  background #00BDEF
  box-shadow 0px 1px 4px 0px rgba(0,0,0,0.50)
  color #fff
