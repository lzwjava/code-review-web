@import "variables.styl"
@import "reset.styl"

*
  box-sizing border-box

html, body, a
  font-family Helvetica,"Helvetica Neue","PingFang","Hiragino Sans GB","WenQuanYi Micro Hei",Arial,"Microsoft Yahei",Verdana,sans-serif
  color textColor
  text-decoration none

body
  background #F1F5F6

  @media screen and (max-width:768px)
    width 100%

button,input,select,textarea
  border-radius 3px

.hidden
  display none

ul.list
  font-size 0
  li
    display inline-block
    font-size 1rem

a:hover
  opacity 0.8
  transition .5s

.btn-common
  margin 5px
  border-radius 3px
  padding 10px

.btn-detail
  background rgba(255,255,255,0.10)
  border 1px solid #ffffff

.btn-blue
  background #00BDEF
  box-shadow 0px 1px 4px 0px rgba(0,0,0,0.50)
  color #fff
  &:hover
    background #00ABD8

.btn-green
  background #33C96F
  color #FFFFFF
  line-height 16px

.cancel
  background url(../img/icon/cancel.png) no-repeat
  width 16px
  height 16px

.main-container
    max-width 1080px
    margin 30px auto

.absolute-center
    margin auto
    position absolute
    top 0
    left 0
    bottom 0
    right 0

.btn-github
  btn(url(../img/icon/github.png), white, 1, 85, 30)

h1
  font-size 3.75rem
  font-weight 100
h2
  font-size 1.5rem
  font-weight 100
h3
  font-size 1rem
h4
  font-size 1rem
  font-weight 600
h5
  font-size 20px

input, textarea, select
  &:focus
    border none
    outline none
    box-shadow 0px 1px 4px 0px rgba(0,0,0,.06)
    -webkit-box-shadow 0px 1px 4px 0px rgba(0,0,0,.06)
